<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <Platforms>AnyCPU;x64;x86</Platforms>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <OutputPath>..\_packageCSSPDesktop\</OutputPath>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x86'">
    <OutputPath>..\_packageCSSPDesktop\</OutputPath>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x64'">
    <OutputPath>..\_packageCSSPDesktop\</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="helpdocs\images\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\CSSPDesktopServices\CSSPDesktopServices.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="helpdocs\HelpDocEN.rtf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="helpdocs\HelpDocFR.rtf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>