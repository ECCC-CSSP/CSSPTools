    </Compile>
    <Compile Update="RegisterAsync.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="LoginAsync.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="EnabledOrDisableRegisterButton.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="EnabledOrDisableLoginButton.cs">
      <SubType>Form</SubType>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="index.html">
