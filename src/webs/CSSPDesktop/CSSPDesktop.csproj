    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="6.0.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="csspotherfiles\images\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\services\CSSPDesktopServices\CSSPDesktopServices.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="SettingUpAllTextForLanguage.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="ShowPanelEnum.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="Stop.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="Start.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="ShowPanels.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="SetupAsync.cs">
